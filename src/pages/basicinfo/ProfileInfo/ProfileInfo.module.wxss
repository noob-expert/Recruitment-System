.profileinfo {
  box-sizing: border-box;
  width: 19rem;
  height: 24rem;
  border: 1px solid #F0F0F0;
  margin: 1rem auto;
  padding: 1.5rem 0;
}
.profileinfo img {
  height: 4rem;
  width: 5rem;
}
.profileinfo .username {
  margin: 1rem 0;
  font-size: 0.8rem;
}
.profileinfo .userinfo {
  padding-left: 2.5rem;
}
.profileinfo .userinfo div {
  text-align: left;
  margin: 1rem auto;
}
.profileinfo .userinfo div > span {
  display: inline-block;
  width: 4rem;
}
